#!/usr/bin/env bash

VERSION=1.0

GREEN='\033[1;32m'
RED='\033[1;31m'
YELLOW='\033[1;33m'
NC='\033[0m'

set -e

SYSTEM=$(uname -m)

case "$SYSTEM" in
  x86_64)
    FLAKE_TARGET="x86_64-linux"
    ;;
  aarch64)
    FLAKE_TARGET="aarch64-linux"
    ;;
  *)
    echo -e "${RED}Unsupported architecture: $SYSTEM${NC}"
    exit 1
    ;;
esac

alejandra . &>/dev/null
echo -e "${YELLOW}Starting...${NC}"
alias nixos-rebuild='/run/current-system/sw/bin/nixos-rebuild'
sudo nixos-rebuild switch --flake .#$FLAKE_TARGET $@
read -r GEN DATE TIME <<< $(nixos-rebuild list-generations | sed -n '2p' | awk '{print $1, $2, $3}')
git add -A
git commit -m "NixOS: Build generation $GEN on $DATE at $TIME"
echo -e "${GREEN}Switch to new generation complete!${NC}"
