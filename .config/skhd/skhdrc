cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9

# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# move window to space #
cmd + shift - 1 : yabai -m window --space 1; yabai -m space --focus 1; yabai -m window --focus first
cmd + shift - 2 : yabai -m window --space 2; yabai -m space --focus 2; yabai -m window --focus first
cmd + shift - 3 : yabai -m window --space 3; yabai -m space --focus 3; yabai -m window --focus first 
cmd + shift - 4 : yabai -m window --space 4; yabai -m space --focus 4; yabai -m window --focus first
cmd + shift - 5 : yabai -m window --space 5; yabai -m space --focus 5; yabai -m window --focus first
cmd + shift - 6 : yabai -m window --space 6; yabai -m space --focus 6; yabai -m window --focus first
cmd + shift - 7 : yabai -m window --space 7; yabai -m space --focus 7; yabai -m window --focus first
cmd + shift - 8 : yabai -m window --space 8; yabai -m space --focus 8; yabai -m window --focus first
cmd + shift - 9 : yabai -m window --space 9; yabai -m space --focus 9; yabai -m window --focus first

# Resize window by moving the right edge to the right
ctrl + shift - l : yabai -m window --resize right:20:0

# Resize window by moving the right edge to the left
ctrl + shift - h : yabai -m window --resize right:-20:0

# Resize window by moving the bottom edge down
ctrl + shift - j : yabai -m window --resize bottom:0:20

# Resize window by moving the bottom edge up
ctrl + shift - k : yabai -m window --resize bottom:0:-20

# Resize windows to default
ctrl + shift - return : yabai -m space --balance

# Move window to the left
cmd + shift - h : yabai -m window --warp west

# Move window to the down
cmd + shift - j : yabai -m window --warp south

# Move window to the up
cmd + shift - k : yabai -m window --warp north

# Move window to the right
cmd + shift - l : yabai -m window --warp east

